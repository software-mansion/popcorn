{
  "name": "@swmansion/popcorn",
  "version": "0.2.0",
  "description": "JS bindings for Popcorn",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://popcorn.swmansion.com",
  "bugs": {
    "url": "https://github.com/software-mansion/popcorn/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/software-mansion/popcorn.git"
  },
  "author": "Software Mansion",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "setup": "./scripts/get_atomvm.sh assets/",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "lint": "eslint && prettier . --check --log-level=warn",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run buildWasmFromGit && pnpm run build",
    "buildWasmFromGit": "RUNTIME_SOURCE='https://github.com/software-mansion-labs/FissionVM.git#swm' ./get_atomvm.sh assets/"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "prettier": "3.6.2",
    "rollup-plugin-copy": "^3.5.0",
    "tsdown": "^0.16.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.9"
  }
}
