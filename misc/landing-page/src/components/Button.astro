---
interface Props {
  href: string;
  title: string;
  type: "primary" | "secondary";
  newTab?: boolean;
}
const { href, title, type, newTab = false } = Astro.props;

const primaryClasses =
  "bg-brown-70 hover:bg-brown-80 focus:outline-orange-20 focus:border-orange-20 text-light-30";
const secondaryClasses =
  "text-brown-70 hover:bg-grey-20 focus:border-orange-100 focus:text-orange-100 focus:outline-orange-100 border border-brown-70";

const classes = type === "primary" ? primaryClasses : secondaryClasses;

export const buttonGroupClass =
  "flex items-center gap-4 mt-12 flex-col md:flex-row md:w-auto w-full";
---

<a
  {...newTab ? { target: "_blank", rel: "noopener noreferrer" } : {}}
  href={href}
  class:list={[
    classes,
    "w-full max-w-sm rounded-lg pt-4 pr-6 pb-4 pl-6 text-center transition-colors duration-150 md:w-[200px]",
  ]}>{title}</a
>
