---
const { n, title } = Astro.props;
---

<div
  class="bg-brown-80 border-brown-gray flex flex-col justify-between gap-10 rounded-3xl border p-6 md:px-12 md:py-14 lg:flex-row lg:gap-28"
>
  <div class="flex max-w-80 flex-col gap-8 md:gap-24">
    <div class="flex items-center gap-3">
      <h3
        class="bg-orange-weird font-handjet inline-block rounded-sm px-1.5 py-0.5 text-2xl font-light text-orange-100 md:p-2.5 md:text-4xl"
      >
        {n}
      </h3>
      <h3 class="text-2xl md:text-4xl">{title}</h3>
    </div>
    <p><slot name="description" /></p>
  </div>
  <div class="flex w-full items-center sm:min-w-sm">
    <img
      src="https://placehold.co/500x300"
      crossorigin="anonymous"
      class="rounded"
    />
  </div>
</div>
