---
const { n, title } = Astro.props;
---

<div
  class="flex flex-col md:flex-row rounded-3xl md:py-14 md:px-12 p-6 bg-brown-90 border border-brown-gray justify-between md:gap-28 gap-10"
>
  <div class="flex flex-col md:gap-24 gap-8 max-w-80">
    <div class="flex items-center gap-3">
      <h3
        class="inline-block md:p-2.5 py-0.5 px-1.5 rounded-sm bg-orange-weird text-orange-100 md:text-4xl text-2xl font-handjet font-light"
      >
        {n}
      </h3>
      <h3 class="md:text-4xl text-2xl">{title}</h3>
    </div>
    <p><slot name="description" /></p>
  </div>
  <img src="https://placehold.co/500x300" />
</div>
